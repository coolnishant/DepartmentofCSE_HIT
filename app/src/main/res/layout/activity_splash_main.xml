<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mycolorPrimaryDark"
    tools:context="in.httpcsehithaldia.departmentofcsehit.SplashMain">

    <TextView
        android:id="@+id/textView"
        android:marqueeRepeatLimit="marquee_forever"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textColor="@color/mycolorAccent"
        android:textAlignment="center"
        android:fontFamily="cursive"
        android:textSize="28sp"
        android:text="For\nCSE\nFrom\nCSE Students"
        android:layout_below="@+id/linearLayout"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="26dp" />
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:layout_marginTop="35dp"
    android:weightSum="1"
    android:id="@+id/linearLayout"
    android:layout_below="@+id/textView2"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true">
    <net.bohush.geometricprogressview.GeometricProgressView
        android:id="@+id/myprogressView"
        android:layout_width="wrap_content"
        android:layout_height="112dp"
        app:gp_type="kite"
        app:gp_number_of_angles="7"
        android:layout_gravity="center"
        app:gp_color="@android:color/holo_blue_bright"
        app:gp_duration="800"
        app:gp_figure_padding="4dp"
        android:layout_weight="0.30" />
    </LinearLayout>
    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:textColor="@color/mycolorPrimary"
        android:fontFamily="casual"
        android:textSize="40sp"
        android:gravity="center"
        android:textAlignment="center"
        android:text="CSE\nDepartmental\nWebsite"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <!--android:textColor="#0E3940"-->

    <TextView
        android:id="@+id/tvnamedev"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="serif-monospace"
        android:textAlignment="center"
        android:visibility="gone"
        android:text="Nishant n Abhijeet"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp" />
</RelativeLayout>
